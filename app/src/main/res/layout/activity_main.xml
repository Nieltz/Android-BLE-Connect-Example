<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nilsl.bleserviceexample.MainActivity">

    <Button
        android:id="@+id/StartScanButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/StopScanButton"
        android:layout_alignBottom="@+id/StopScanButton"
        android:layout_alignParentStart="true"
        android:text="Scan" />

    <Button
        android:id="@+id/StopScanButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/DisconnectButton"
        android:layout_alignParentStart="true"
        android:text="Stop Scanning" />

    <TextView
        android:id="@+id/PeripheralTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ConnectButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"
        android:maxLines="30"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/ConnectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/InputIndex"
        android:text="Connect to device index" />

    <Button
        android:id="@+id/DisconnectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/InputIndex"
        android:layout_alignBottom="@+id/InputIndex"
        android:layout_alignParentStart="true"
        android:text="Disconnect from device" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:singleLine="true"
        android:cursorVisible="false"
        android:id="@+id/InputIndex"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/textviewborder"/>


</RelativeLayout>
